<project name="bigapple" basedir=".">
    <property file="build.properties" />
    
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="build"/>
    <property name="build.classes.dir" value="${build.dir}/classes"/>
    <property name="build.javadoc.dir" value="${build.dir}/javadoc"/>
    
    <property name="bigapple.dir" value="src/com/winupon/andframe/bigapple"/>
    
    <!-- android的jar路径 -->
    <path id="depend.jar">
        <fileset dir="build-libs">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <!-- jar-lib打包，直接使用 -->
    <target name="jar-lib" description="Package lib jar">
        <delete dir="${build.classes.dir}"/>
        <delete file="${build.dir}/${project.version}"/>
        
        <mkdir dir="${build.classes.dir}"/>
        <javac
            srcdir="${bigapple.dir}"
            destdir="${build.classes.dir}"
            includeantruntime="no">
            <classpath refid="depend.jar"/>
            <compilerarg value="-Xlint" />
        </javac>
        
        <jar destfile="${build.dir}/${project.version}.jar" basedir="${build.classes.dir}" />
    </target>
    
    <!-- api导出 -->
    <target name="javadoc" description="Generate java docs">
        <delete dir="${build.javadoc.dir}" />
        <mkdir dir="${build.javadoc.dir}" />
        <javadoc
            sourcepath="${src.dir}"
            destdir="${build.javadoc.dir}"
            access="package"
            author="true"
            version="true"
            source="1.6"
            charset="UTF-8"
            encoding="UTF-8"
            linksource="true"
            nodeprecated="false"
            nodeprecatedlist="false"
            noindex="false"
            nonavbar="false"
            notree="false"
            splitindex="false"
            use="true"
            packagenames="com.winupon.andframe.*"
            windowtitle="The Bigapple Framework API"
            doctitle="The Bigapple Framework by ZDSoft Networks Dev2 Xuan">
            <classpath refid="depend.jar"/>
        </javadoc>
    </target>
</project>