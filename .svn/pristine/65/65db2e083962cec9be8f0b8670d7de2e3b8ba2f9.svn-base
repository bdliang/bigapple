<project name="bigapple" basedir=".">
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="build"/>
    <property name="build.classes.dir" value="${build.dir}/classes"/>
    <property name="build.jar.dir" value="${build.dir}/jar"/>
    
    <property name="bigapple.dir" value="src/com/winupon/andframe/bigapple"/>
    <property name="project.name" value="bigapple-1.2.9.bate"/>
    
    <!-- android的jar路径 -->
    <path id="depend.jar">
        <fileset dir="jarlibs">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <!-- 删除原先的文件 -->
    <target name="clean" description="删除打包临时文件">
        <delete dir="${build.classes.dir}"/>
    </target>

    <!-- 编译源文件成class文件 -->
    <target name="compile" description="编辑java文件成class">
        <mkdir dir="${build.classes.dir}"/>
        <javac 
            srcdir="${bigapple.dir}"
            destdir="${build.classes.dir}"
            includeantruntime="no">
            <classpath refid="depend.jar"/>
            <compilerarg value="-Xlint" />
        </javac>
    </target>

    <!-- 把class文件打成jar包 -->
    <target name="jar" depends="compile" description="class文件打成jar">
        <mkdir dir="${build.jar.dir}"/>
        <jar destfile="${build.jar.dir}/${project.name}.jar" basedir="${build.classes.dir}" />
    </target>

    <target name="clean-build" depends="clean,jar" description="打包"/>
</project>